theme = Atom One Dark
# theme = Gruvbox Light Hard
window-padding-x = 5
window-padding-y = 5
command = fish
font-size = 16


# Cursor styles
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor


# Keybindings
keybind = ctrl+q>s=new_split:down
keybind = ctrl+q>v=new_split:right
keybind = ctrl+q>f=toggle_split_zoom
keybind = ctrl+q>q=close_surface

# Moving around splits
keybind = ctrl+q>h=goto_split:left
keybind = ctrl+q>j=goto_split:down
keybind = ctrl+q>k=goto_split:up
keybind = ctrl+q>l=goto_split:right

#goto tab
keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+9=goto_tab:9
